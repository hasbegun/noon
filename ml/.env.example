# Food Detection & Nutrition Analysis - Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# DATA PATHS
# ============================================================================
# FOOD_DATA_ROOT=./data
# FOOD_MODELS_ROOT=./models

# ============================================================================
# TRAINING CONFIGURATION
# ============================================================================
FOOD_BATCH_SIZE=8
FOOD_NUM_WORKERS=4
FOOD_EPOCHS=50
FOOD_LEARNING_RATE=0.0001
FOOD_WEIGHT_DECAY=0.0001

# Multi-node training
FOOD_NUM_NODES=1
FOOD_DEVICES_PER_NODE=1

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
FOOD_SAM2_MODEL_TYPE=vit_b
# FOOD_SAM2_CHECKPOINT=/path/to/sam2_checkpoint.pt
FOOD_IMAGE_SIZE=1024

# ============================================================================
# DATA SPLITS
# ============================================================================
FOOD_TRAIN_SPLIT=0.7
FOOD_VAL_SPLIT=0.15
FOOD_TEST_SPLIT=0.15

# ============================================================================
# DATA AUGMENTATION
# ============================================================================
FOOD_USE_AUGMENTATION=true
FOOD_AUGMENTATION_PROB=0.5

# ============================================================================
# VOLUME ESTIMATION
# ============================================================================
FOOD_REFERENCE_HEIGHT_CM=2.5
FOOD_REFERENCE_DIAMETER_CM=25.0

# ============================================================================
# USDA DATABASE
# ============================================================================
# FOOD_USDA_DB_PATH=./data/usda/nutrition.db
FOOD_USDA_FOUNDATION_JSON=FoodData_Central_foundation_food_json_2025-04-24.json
FOOD_USDA_BRANDED_JSON=FoodData_Central_branded_food_json_2025-04-24.json

# ============================================================================
# API CONFIGURATION
# ============================================================================
FOOD_API_HOST=0.0.0.0
FOOD_API_PORT=8000
FOOD_API_RELOAD=false

# ============================================================================
# LOGGING
# ============================================================================
FOOD_LOG_LEVEL=INFO
# FOOD_LOG_DIR=./logs

# ============================================================================
# DEVICE CONFIGURATION
# ============================================================================
# Options: cuda, mps, cpu
FOOD_DEVICE=mps
FOOD_MIXED_PRECISION=true
